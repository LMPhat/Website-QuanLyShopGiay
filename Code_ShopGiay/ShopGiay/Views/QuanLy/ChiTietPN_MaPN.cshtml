@model IEnumerable<ShopGiay.Models.CHITIETPN>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
@{
    var nfi = new System.Globalization.NumberFormatInfo { NumberGroupSeparator = "." };
}

<div class="nav navbar">
    <div class="dropdown">
        <div class="dropdown">
            <a class="nav-link dropdown-toggle text-dark" id="a" href="#" role="button" data-toggle="dropdown" aria-expanded="false">

            </a>
            <div style="position:relative;" class="dropdown-menu collapse list-unstyled" aria-labelledby="a">
                <table class="table table-hover">
                    <tr>
                        <th>
                            PRODUCT NAME
                        </th>

                        <th>
                            SIZE
                        </th>

                        <th>
                            AMOUNT
                        </th>

                        <th>
                            IMPORT PRICE
                        </th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.SANPHAM.TENSP
                            </td>
                            <td>
                                @item.KICHTHUOC
                            </td>
                            <td>
                                @item.SLNHAP
                            </td>
                            <td>
                                @item.DGNHAP.Value.ToString("#,##", nfi) VNĐ
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>



