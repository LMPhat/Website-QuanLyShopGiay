@using ShopGiay.Models;
@model List<LOAISP>

@{
    ViewBag.Title = "TheLoai";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";

}

<!DOCTYPE html>
<html style="font-size: 16px;" lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="CATEGORY">
    <meta name="description" content="">
    <title>Home</title>
    <link rel="stylesheet" href="/Content/nicepage.css" media="screen">
    <link rel="stylesheet" href="/Content/Home.css" media="screen">
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700">

    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Home">
    <meta property="og:type" content="website">
</head>
<body class="u-body u-xl-mode" data-lang="en">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    <section class="u-align-center u-clearfix u-section-2" id="sec-fc05">
        <div class="u-clearfix u-sheet u-valign-top u-sheet-1">
            <div class="u-align-center-xs u-align-left-lg u-align-left-md u-align-left-sm u-align-left-xl u-container-style u-expanded-width u-group u-shape-rectangle u-group-1">
                <div class="u-container-layout u-container-layout-1">
                    <h2 class="u-custom-font u-font-oswald u-text u-text-custom-color-1 u-text-1">CATEGORY LIST&nbsp;</h2>
                    <a href="#" class="u-border-2 u-border-black u-border-hover-custom-color-1 u-btn u-button-style u-hover-custom-color-1 u-none u-text-hover-white u-btn-1"
                       data-toggle="modal" data-target="#addProductModal" style="margin-right:125px;">CREATE NEW</a>
                    <!-- Modal cho sản phẩm cụ thể -->
                    <form method="post" action="/QuanLy/ThemTL" enctype="multipart/form-data">
                        <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addProductModalLabel">Add Category Information</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-xl-left" style="color:gray;">
                                        <!-- Hiển thị thông tin sản phẩm -->
                                        <div class="editor-label">
                                            NAME
                                        </div>
                                        <div class="editor-field">
                                            <input type="text" name="tenLoai" placeholder="Nhập tên thể loại..." />
                                            @Html.ValidationMessage("tenLoai", "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-danger">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <div class="u-expanded-width u-table u-table-responsive u-table-1">
                <table class="u-table-entity">
                    <colgroup>
                        <col width="3.2%">
                        <col width="9.8%">
                        @*<col width="9.8%">
                        <col width="12.9%">
                        <col width="12%">*@
                        <col width="9.8%">
                    </colgroup>
                    <thead class="u-align-center u-black u-table-header u-table-header-1">
                        <tr style="height: 85px;">
                            <th class="u-align-center u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell">ID</th>
                            <th class="u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell u-table-cell-2">NAME</th>
                            @*<th class="u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell u-table-cell-3">SUPPLIER NAME</th>
                            <th class="u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell u-table-cell-3">DETAIL</th>
                            <th class="u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell u-table-cell-3">TOTAL</th>*@
                            <th class="u-border-1 u-border-grey-30 u-custom-font u-font-oswald u-table-cell u-table-cell-7">OPTION</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody class="u-align-center u-custom-font u-font-oswald u-table-body">
                            <tr style="height: 100px;">
                                <td class="u-align-left u-border-1 u-border-grey-30 u-first-column u-table-cell u-table-cell-9">@item.MALOAI</td>
                                <td class="u-align-left u-border-1 u-border-grey-30 u-table-cell u-table-cell-12">@item.TENLOAI</td>
                                <td class="u-border-1 u-border-grey-30 u-table-cell u-table-cell-20">
                                    @*<div><a href="/QuanLy/SuaTL/@item.MALOAI" class="btn btn-secondary" style="margin-bottom:10px;">UPDATE</a></div>*@
                                    <a href="#" class="btn btn-secondary" style="margin-bottom:10px;"
                                       data-toggle="modal" data-target="#updateModal-@item.MALOAI" data-maloai="@item.MALOAI">UPDATE</a>
                                    <!-- Modal cho sản phẩm cụ thể -->
                                    <form method="post" action="/QuanLy/SuaTL" enctype="multipart/form-data">
                                        <div class="modal fade" id="updateModal-@item.MALOAI" data-maloai="@item.MALOAI" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="addProductModalLabel">Update Category Information</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body text-xl-left" style="color:gray;">
                                                        <!-- Hiển thị thông tin sản phẩm -->
                                                        <p>Product ID: <span style="color:black;"> @item.MALOAI </span></p>
                                                        <input type="hidden" name="MALOAI" value="@item.MALOAI">
                                                        <div class="editor-label">
                                                            NAME
                                                        </div>
                                                        <div class="editor-field">
                                                            <input type="text" name="tenLoai" placeholder="Nhập tên thể loại..." value="@item.TENLOAI" />
                                                            @Html.ValidationMessage("tenLoai", "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-danger">Save</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    @*<div><a href="/QuanLy/XoaSP/@item.MALOAI" class="btn btn-danger">DELETE</a></div>*@
                                    <a href="#" class="btn btn-danger" style="margin-bottom:10px;"
                                       data-toggle="modal" data-target="#deleteModal-@item.MALOAI" data-maloai="@item.MALOAI">DELETE</a>
                                    <!-- Modal cho sản phẩm cụ thể -->
                                    <form method="post" action="/QuanLy/XoaTL" enctype="multipart/form-data">
                                        <div class="modal fade" id="deleteModal-@item.MALOAI" data-maloai="@item.MALOAI" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="addProductModalLabel">Delete Category Information</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body text-xl-left" style="color:gray;">
                                                        <!-- Hiển thị thông tin sản phẩm -->
                                                        <p>Bạn có đồng ý xóa thể loại<span style="color:black;"> @item.MALOAI </span> không?</p>
                                                        <input type="hidden" name="MALOAI" value="@item.MALOAI">
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-danger">Save</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </td>                            
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </section>
</body>
</html>
