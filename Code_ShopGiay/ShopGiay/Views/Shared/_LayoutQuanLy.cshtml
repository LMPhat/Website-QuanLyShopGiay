                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">CATEGORY LIST &nbsp;&nbsp;</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            @Html.Action("MenuLoaiSP", "QuanLy")
                        </ul>
                    </li>*@
                    <li>
                        <a href="/QuanLy/PhieuNhap">RECEIPT</a>
                    </li>
                    <li>
                        <a href="/QuanLy/NhanVien">EMPLOYEE</a>
                    </li>
