            <div class="p-4 pt-5">
                @Html.Action("KhoiTao_AD", "TaiKhoan")
                <h1><a href="/QuanLy/SanPham" class="logo">Sneaker</a></h1>
                <ul class="list-unstyled components mb-5 u-custom-font u-font-oswald u-nav u-unstyled u-nav-1">
                    <li>
                        <a href="/QuanLy/TheLoai">CATEGORY LIST</a>
